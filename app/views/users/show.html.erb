<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>

<div class="columns">
  <div class="column is-one-third">
    <div class="container">
      <%= render 'shared/user_card', user: @user %>
    </div>
  </div>
</div>

<div class="col-md-8">
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= will_paginate @posts, renderer: BulmaPagination::Rails, class: 'is-primary' %>
  <% end %>
</div>