<% if @user %>
  <% title = "#{@user.name}'s Pages" %>
<% else %>
  <% title = "All Pages" %>
<% end %>

<%= link_to 'New Page',  new_page_path, class: "button is-primary" %>

<%= link_to "All Pages", pages_path,    class: "button is-primary" %>

<%= content_tag :hr, "", class: "hr" %>

<%= render 'shared/tiled_entities', entities: @pages, title: title %>