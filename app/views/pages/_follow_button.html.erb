<div id="follow_button">
  <% if @page.followers.include?(current_user) %>
    <%= form_for @page.followings.find_by(page: @page, user: current_user), html: { method: :delete } do |f| %>
      <%= f.hidden_field :page_id,  value: @page.id %>
      <%= f.submit "Unfollow Page", class: "button is-danger is-pulled-right"  %>
    <% end %>
  <% else %>
    <%= form_for @page.followings.build do |f| %>
      <%= f.hidden_field :page_id,  value: @page.id %>
      <%= f.submit "Follow Page",   class: "button is-primary is-pulled-right" %>
    <% end %>
  <% end %>
</div>