<h1>Edit Profile</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="columns is-multiline is-mobile">
    <div class="column is-one-quarter">
      <div class="field">
        <%= content_tag(:h3, "New Email (optional)") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary" %>
      </div>
    </div>
    <%= content_tag(:div, "", class: "column is-three-quarters") %>

    <div class="column is-one-quarter">
      <div class="field">
        <%= content_tag(:h3, "New Password (optional)") %>
        <%= f.password_field :password, class: "input is-primary" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>
    
    <div class="column is-one-quarter">
      <div class="field">
        <%= content_tag(:h3, "New Password Confirmation (optional)") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-primary" %>
      </div>
    </div>
    <%= content_tag(:div, "", class: "column is-half") %>

    <div class="column is-one-quarter">
      <div class="field">
        <%= content_tag(:h3, "Current Password") %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-primary" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button is-primary" %>
  </div>
<% end %>

<p>Want your life back? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-light" %></p>
