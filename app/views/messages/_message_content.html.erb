<div class="content">
  <%= content_tag :h4, message.user.name, class: "is-size-4 has-text-weight-bold" %>
  <%= content_tag :h6, message.content,   class: "title is-size-6 is-family-primary" %>
  <nav class="level">
    <div class="level-left">
      <%= render 'shared/heart_button', content: message %>
    </div>
    <div class="level-right">
      <%= content_tag :span, 
         "#{time_ago_in_words(message.created_at)} ago", class: "is-size-7" %>
    </div>
  </nav>
</div>